<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#F11638"
                     />


                <TextView
                    android:id="@+id/dest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#F11638"
                  />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#F11638"
                    />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#F11638"
                   />

                <Spinner
                    android:id="@+id/company"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:accessibilityHeading="false"
                   android:background="@drawable/button_gray"
                    android:outlineAmbientShadowColor="#F31313"
                    android:outlineSpotShadowColor="#F10A0A"
                    android:textColor="#F11638" />

                <TextView
                    android:id="@+id/explain_in_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#F11638"
                    />

                <Spinner
                    android:id="@+id/status"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_gray"
                    android:outlineAmbientShadowColor="#F31313"
                    android:outlineSpotShadowColor="#F10A0A"
                    android:textColor="#F11638"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                        <Button
                            android:id="@+id/save_company"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_blue"
                            android:padding="10dp"
                            android:text="Approve Company"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#1B219F" />

                        <Button
                            android:id="@+id/save_status"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_blue"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:text="Save Status"
                            android:textAllCaps="false"
                            android:textColor="#1B219F" />
                </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    </LinearLayout>


    </LinearLayout>